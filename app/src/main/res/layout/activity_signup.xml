<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 단계 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="100dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginHorizontal="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:background="@drawable/circle_green"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginHorizontal="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 아이디 -->
        <TextView android:text="아이디" android:textSize="16sp" android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editId"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="아이디 입력"
                android:background="@drawable/rounded_gray_bg"
                android:paddingHorizontal="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="중복 확인"
                android:backgroundTint="#D8E284"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- 비밀번호 -->
        <TextView android:text="비밀번호" android:textSize="16sp" android:textStyle="bold" />
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:background="@drawable/rounded_gray_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editPassword2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:background="@drawable/rounded_gray_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 휴대폰 번호 -->
        <TextView android:text="휴대폰 번호" android:textSize="16sp" android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="휴대폰 번호 입력"
                android:background="@drawable/rounded_gray_bg"
                android:paddingHorizontal="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="인증번호 받기"
                android:backgroundTint="#D8E284"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Buttonsdasdasdgit status
            android:id="@+id/btnNext"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="다음"
            android:backgroundTint="#A2C523"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginup="100dp"/>
    </LinearLayout>
</ScrollView>
